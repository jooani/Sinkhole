{
  "compilerOptions": {
    "allowJs": true, 
    "checkJs": false,  
    "target": "es6",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"]
}